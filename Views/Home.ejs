<%- include('./partials/head'); %>
<figure class="t-shirt">
    <svg xmlns="http://www.w3.org/2000/svg" 
         viewBox="0 0 511.882 511.882">
        <polygon id="changeColor"    
        stroke="black"
        points="362.587,42.65 149.301,42.65 0,127.959 42.662,245.268 106.647,223.937 106.647,469.232 
    405.25,469.232 405.25,223.937 469.236,245.268 511.882,127.959 " >
    <g
        transform="translate(0.000000,1280.000000) scale(0.100000,-0.100000)"
    >
    <path d="M255.948,117.297c41.233,0,74.647-33.422,74.647-74.647H181.294
    C181.294,83.875,214.716,117.297,255.948,117.297z" />
    </g>
    </svg>
    </figure>
    <form method="POST" action="/winkelmand">
        <h3>Maak je eigen Nerdy t-shirt!</h3>
        <h4>Kleur</h4>
        <fieldset id="kleur">
            <input type="radio" id="color-zwart" name="shirtColor" value="black" required checked />
            <label for="color-zwart">Zwart</label>
            <input type="radio" id="color-wit" name="shirtColor" value="white" required />
            <label for="color-wit">Wit</label>
            <input type="radio" id="color-blauw" name="shirtColor" value="blue" required />
            <label for="color-blauw">Blauw</label>
            <input type="radio" id="color-geel" name="shirtColor" value="yellow" required />
            <label for="color-geel">Geel</label>
        </fieldset>
        <form method="POST" action="/">
            <button type="submit">Verander kleur</button>

        <h4>Maat</h4>
            <fieldset id="maat">
            <input type="radio" id="xs" name="shirtSize" value="xs" required />    
            <label for="xs">XS</label>
            <input type="radio" id="s" name="shirtSize" value="s" required />
            <label for="s">S</label>
            <input type="radio" id="m" name="shirtSize" value="m" required />
            <label for="m">M</label>
            <input type="radio" id="l" name="shirtSize" value="l" required />
            <label for="l">L</label>
            <input type="radio" id="xl" name="shirtSize" value="xl" required />
            <label for="xl">XL</label>
        </fieldset>
        
        <h4>Geslacht</h4>
        <fieldset id="geslacht">
            <input type="radio" id="man" name="gender" value="man" required />
            <label for="man">Man</label>
            <input type="radio" id="woman" name="gender" value="woman" required />
            <label for="woman">Vrouw</label>
        </fieldset> 
        
        <h4>Bestelling toevoegen aan je winkelmand</h4>
        <button type="submit">Toevoegen</button>
    </form>
</form>