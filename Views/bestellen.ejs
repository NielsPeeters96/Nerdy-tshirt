<%- include('./partials/head'); %>
<body>
    <h1>Checkout</h1>
    <form>
        <h4>Naam</h4>
        <fieldset>
            <input type="text" id="name" required />
        </fieldset>
        
        <h4>Postcode</h4>
        <fieldset>
            <input type="text" id="postalcode" required />
        </fieldset>
        
        <h4>Adres</h4>
        <fieldset>
            <input type="text" id="adress" required />
        </fieldset> 

        <h4>Mobiel</h4>
        <fieldset>
            <input type="number" id="mobile" required />
        </fieldset> 
        
        <h4>Klik hier om je bestelling af te ronden</h4>
        <fieldset>
            <button onclick="window.location.href='/'">Afronden</button>
        </fieldset>
    </form>
</body>